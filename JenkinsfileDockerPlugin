pipeline {
    agent any

    tools {
        jdk "jdk-17"
        maven "maven-3"
    }

    stages {
       stage('Clean workspace') {
            steps {
                cleanWs disableDeferredWipeout: true, deleteDirs: true
            }
        }

        stage('Pull szkolenie cicd') {
            steps {
                 git branch: 'main', url: 'https://github.com/rechandler12/szkolenie-cicd-jenkins-gitlab.git'
                 sh 'echo ' + env.CHANGE_TITLE
            }
            post {
                success {
                    slackSend message: 'Pulled code', color: '#4287f5'
                }
                failure {
                    slackSend message: 'Faild', color: '#ff0000'
                }
            }
        }

        stage('Build') {
            steps {
                sh 'docker build -p 80:80 -t test_app ./docker-pipeline'
            }
            post {
                success {
                    slackSend message: 'Build docker ok', color: '#22ff00'
                }
                failure {
                    slackSend message: 'Build docker failed', color: '#ff0000'
                }
            }
        }

        stage('run') {
            steps {
                sh 'docker run -d test_app'
            }
        }
    }
}
